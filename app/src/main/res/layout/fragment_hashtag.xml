<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/transparent"
            android:backgroundTint="@color/transparent"
            android:layout_margin="9dp"
            app:cardCornerRadius="18dp">
            <com.github.mmin18.widget.RealtimeBlurView
                android:layout_width="match_parent"
                app:realtimeBlurRadius="10dp"
                app:realtimeOverlayColor="#B2FFFFFF"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/searchicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingStart="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_search_black_24dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/search_bar"
                    android:layout_toEndOf="@id/searchicon"
                    android:background="@color/transparent"
                    android:textColor="@color/black"
                    android:hint="@string/searchhint"
                    android:maxLines="1"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/switch_cv"
                    android:layout_alignParentBottom="true"
                    android:layout_width="200dp"
                    android:layout_alignParentEnd="true"
                    android:layout_height="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hashtags"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/users_text"
                    android:layout_alignParentBottom="true"
                    android:layout_width="200dp"
                    android:backgroundTint="@color/transparent"
                    android:background="@color/transparent"
                    app:cardElevation="0dp"
                    android:layout_height="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Users"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/hashtags_text"
                    android:layout_alignParentBottom="true"
                    android:layout_width="200dp"
                    android:layout_marginStart="200dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/transparent"
                    android:background="@color/transparent"
                    android:layout_height="25dp">
                    f<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hashtags"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/hashtagrecyclerview"/>
    </FrameLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        android:layout_gravity="bottom"
        ads:adUnitId="ca-app-pub-7280179625741556/8061269021">
    </com.google.android.gms.ads.AdView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/toolbar"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto"
            android:paddingBottom="5dp"
            android:text="Users"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/hashtags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto"
            android:paddingBottom="5dp"
            android:text="Hashtags"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>